{
  "name": "react-native-strings",
  "version": "1.2.0",
  "description": "Type safe string generation including ordinally-aware strings from YAML templates targeted at React Native",
  "main": "build/index.js",
  "bin": "build/cli.js",
  "types": "build/index",
  "files": [
    "build",
    "templates"
  ],
  "scripts": {
    "clean-build": "yarn run clean && yarn run build",
    "clean": "rm -rf ./build",
    "build": "tsc -p tsconfig.json",
    "test": "tap --no-coverage tests/*.ts",
    "cover": "nyc --reporter=lcov npm test",
    "lint": "eslint .",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:gas-buddy/react-native-strings.git"
  },
  "keywords": [
    "react-native",
    "l10n",
    "i18n",
    "typescript",
    "gasbuddy"
  ],
  "author": "GasBuddy",
  "license": "MIT",
  "devDependencies": {
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/glob": "^7.1.3",
    "@types/lodash.snakecase": "^4.1.6",
    "@types/minimist": "^1.2.0",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.6.0",
    "@types/tap": "^14.10.0",
    "@typescript-eslint/parser": "^3.9.1",
    "cross-env": "^7.0.0",
    "eslint": "^7.7.0",
    "tap": "^14.10.8",
    "typescript": "^3.9.7"
  },
  "nyc": {
    "lines": 75,
    "statements": 75,
    "functions": 75,
    "branches": 75,
    "include": [
      "src"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": true,
    "reporter": [
      "lcov"
    ]
  },
  "dependencies": {
    "es6-template-strings": "^2.0.1",
    "glob": "^7.1.6",
    "handlebars": "^4.7.6",
    "lodash.snakecase": "^4.1.1",
    "minimist": "^1.2.5",
    "mkdirp": "^1.0.4",
    "yaml": "^1.10.0"
  }
}
